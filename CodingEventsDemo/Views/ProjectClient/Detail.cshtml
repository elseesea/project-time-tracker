@model CodingEventsDemo.ViewModels.ClientDetailViewModel
<h2>Client:</h2>
<h1>@Model.ClientName</h1>
<p>
    <a asp-controller="ProjectClient" asp-action="Edit" asp-route-id="@Model.ClientId">Edit client name</a>
</p>
<p>
    <a asp-controller="Projects" asp-action="Add" asp-route-id="@Model.ClientId">Add a project for this client</a>
</p>

<hr />

<h2>Projects</h2>

@if (Model.Projects.Count < 1)
{
    <p>No projects found</p>
}
else
{
<table class="table">
    <tr>
        <th>Project Id</th>
        <th>Project Description </th>
    </tr>
    @foreach (var project in Model.Projects)
    {
        <tr>
            <td>@project.Id</td>
            <td><a asp-controller="Projects" asp-action="Detail" asp-route-id="@project.Id">@project.Description</a></td>
        </tr>
    }
</table>
}